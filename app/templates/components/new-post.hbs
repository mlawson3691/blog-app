<div class='well post'>
  <h3>Add a New Post</h3>
  <hr>
  <form>
    <div class='form-group'>
      <label for='title'>Title:</label>
      {{input value=title id='title' class='form-control'}}
    </div>
    <div class='form-group'>
      <label for='body'>Body:</label>
      {{textarea value=body id='body' rows=10 class='form-control'}}
    </div>
    <div class='form-group'>
      <label for='image'>Image Link:</label>
      {{input value=image id='image' class='form-control'}}
    </div>
    <div class='form-group'>
      <label for='date'>Date:</label>
      {{input value=date id='date' type='date' class='form-control'}}
    </div>
    <button {{action 'savePost'}} class='btn btn-default'>Post</button>
  </form>
</div>
