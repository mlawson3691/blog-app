<form>
  <h3>Edit This Post</h3>
  <div class='form-group'>
    <label for='title'>Title:</label>
    {{input value=post.title id='title' class='form-control'}}
  </div>
  <div class='form-group'>
    <label for='body'>Body:</label>
    {{textarea value=post.body id='body' rows=10 class='form-control'}}
  </div>
  <div class='form-group'>
    <label for='image'>Image Link:</label>
    {{input value=post.image id='image' class='form-control'}}
  </div>
  <div class='form-group'>
    <label for='date'>Date:</label>
    {{input value=post.date id='date' type='date' class='form-control'}}
  </div>
  <button {{action 'update' post}} class='btn btn-default'>Edit</button>
</form>
